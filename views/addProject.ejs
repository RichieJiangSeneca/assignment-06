<link rel="stylesheet" href="/css/main.css">

<%- include('partials/navbar', { page: '/solutions/addProject' }) %>
<div class="max-w-xl mx-auto mt-10 p-6 bg-white rounded shadow">
    <h1 class="text-3xl font-bold mb-4">Add Project</h1>
    <form action="/solutions/addProject" method="POST" class="space-y-4">
        <input type="text" name="title" placeholder="Title" class="input input-bordered w-full" required>
        <input type="url" name="feature_img_url" placeholder="Feature Image URL" class="input input-bordered w-full" required>
        <select name="sector_id" class="input input-bordered w-full" required>
            <% sectors.forEach(sector => { %>
                <option value="<%= sector.id %>"><%= sector.sector_name %></option>
            <% }) %>
        </select>
        <textarea name="intro_short" placeholder="Short Introduction" class="textarea textarea-bordered w-full" required></textarea>
        <textarea name="summary_short" placeholder="Short Summary" class="textarea textarea-bordered w-full" required></textarea>
        <textarea name="impact" placeholder="Impact" class="textarea textarea-bordered w-full" required></textarea>
        <input type="url" name="original_source_url" placeholder="Original Source URL" class="input input-bordered w-full" required>
        <button type="submit" class="btn btn-primary w-full">Add Project</button>
    </form>
</div>
